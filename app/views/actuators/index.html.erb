<p id="notice"><%= notice %></p>

<h1>Actuators</h1>

<table>
  <thead>
    <tr>
      <th>Device</th>
      <th>Element</th>
      <th>Expected status</th>
      <th>Current status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @actuators.each do |actuator| %>
      <tr>
        <td><%= actuator.device_id %></td>
        <td><%= actuator.element_id %></td>
        <td><%= actuator.expected_status %></td>
        <td><%= actuator.current_status %></td>
        <td><%= link_to 'Show', actuator %></td>
        <td><%= link_to 'Edit', edit_actuator_path(actuator) %></td>
        <td><%= link_to 'Destroy', actuator, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

